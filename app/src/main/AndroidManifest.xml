<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ardysyahputra.imagemachine">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.FullImage"
            android:theme="@style/ImageThme"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Activity.EditMachineData"
            android:screenOrientation="portrait"
            android:label="EDIT DATA"/>
        <activity android:name=".Activity.Detail_MachineData"
            android:screenOrientation="portrait"
            android:label="MACHINE DATA"/>
        <activity
            android:name=".Activity.AddMachine"
            android:label="ADD MACHINE DATA"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".Activity.CodeReader"
            android:screenOrientation="portrait"
            android:label="QR SCANNER"/>
        <activity
            android:name=".Activity.MachineData"
            android:label="MACHINE DATA"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>